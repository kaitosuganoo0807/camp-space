.user-body
  = image_tag "/sugano.png"
  %h2 新規登録
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      name(漢字)
      %br/
      = f.text_field :family_name_knj, autofocus: true
      = f.text_field :name_knj, autofocus: true
      %br/
      name(カタカナ)
      %br/
      = f.text_field :family_name_ktn, autofocus: true
      = f.text_field :name_ktn, autofocus: true
      %br/
      email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email"
      %br/
      TEL
      %br/
      = f.text_field :tel, autofocus: true, autocomplete: "email"
    .field
      password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password"
    .field
      password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password"
    .actions
      = f.submit "Sign up"
  = render "devise/shared/links"
