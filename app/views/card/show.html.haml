.credit-wrapper
  .single-header
    %h1.single-header__logo
      = link_to root_path do
        = image_tag '/header-log.png',width:'160px'
.card-contents
  .card-content
    %label 登録クレジットカード情報
    %br
    = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2482339763",height:"40px",width:"40px",alt:"visa"
    %br
    = "**** **** **** " + @default_card_information.last4
    %br
    - exp_month = @default_card_information.exp_month.to_s
    - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
    = exp_month + " / " + exp_year
    = form_tag(delete_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
      %input{ type: "hidden", name: "card_id", value: "" }
      %button 削除する
  .purchase-button
    = link_to "購入確認画面に進む",new_master_path
= render 'render/footer'